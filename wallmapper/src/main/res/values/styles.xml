<resources>

    <style name="Theme.Wallpaper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <style name="Theme.Wallpaper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wallpaper.Widget.Button.Round.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">?attr/colorControlNormal</item>
    </style>

</resources>
